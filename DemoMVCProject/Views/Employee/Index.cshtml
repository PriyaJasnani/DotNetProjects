@model System.Data.DataTable;
@{
    ViewData["Title"] = "List of Employees";
}

<div class="jumbotron">
<h1 class="text-center>ViewData["Title"]</h1>
</div>
<p>
   
</p>

<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>EmployeeName</th>
            <th>
                Designation
            </th>
            <th>
               GrossSalary
            </th>
            <th>
                Deductions
            </th>
            <th>
                NetSalary
            </th>
            <th>
                IsActive
            </th>
            <th>
                <a asp-action="AddorEdit">Create New</a>
            </th>
        </tr>
    </thead>
    <tbody>
@for(int i=0;i<Model.Rows.Count;i++)
{
        <tr>
            <td>
                    @Model.Rows[i]["empname"]
            </td>
            <td>
                    @Model.Rows[i]["designation"]
            </td>
            <td>
                    @Model.Rows[i]["grossal"]
            </td>
            <td>
                    @Model.Rows[i]["deducts"]
                </td>
            <td>
                    @Model.Rows[i]["netsal"]
                </td>
            <td>
                    @Model.Rows[i]["isactive"]
                </td>
            <td>
                    <a asp-action="AddorEdit" asp-route-id="@Model.Rows[i]["empid"]">Edit</a> |
                <a asp-action="Delete" asp-route-id="@Model.Rows[i]["empid"]">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>